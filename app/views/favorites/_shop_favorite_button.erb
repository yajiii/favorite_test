<% if shop.favorited_by?(current_user) %>
  <%= link_to shop_favorites_path(shop.id), method: :delete, remote: true, class:"shop-favorite-btn", data: {"turbolinks" => false} do %>
    <i class="fa fa-star" aria-hidden="true"></i>
  <%  end %>
<% else %>
  <%= link_to "/shops/#{shop.id}/favorites", method: :post, remote: true, class:"shop-favorite-btn", data: {"turbolinks" => false} do %>
    <i class="fa fa-star-o" aria-hidden="true"></i>
  <% end %>
<% end %>
